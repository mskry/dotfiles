{
  "title": "Remap R_Shift+ESC to Tilde rules",
  "rules": [{
    "description": "Remap R_Shift+ESC to Tilde",
    "manipulators": [{
      "type": "basic",
      "from": {
        "key_code": "escape",
        "modifiers": {
          "mandatory": "right_shift",
          "optional": [
            "any"
          ]
        }
      },
      "to": [{
        "key_code": "grave_accent_and_tilde",
        "modifiers": [
          "left_shift"
        ]
      }]
    }]
  }]
}
